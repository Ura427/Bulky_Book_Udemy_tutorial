@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index Category";
}


<div class="containder p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new category
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category name</th>
                <th>Display order</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var category in Model)
            {
                <tr>
                    <td width="50%">@category.Name</td>
                    <td width="30%">@category.DisplayOrder</td>
                    <td>
                        <div class="w-auto btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info"><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-auto btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-warning"><i class="bi bi-trash-fill"></i>Delete category</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>